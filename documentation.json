{
  "openapi": "3.0.1",
  "info": {
    "title": "Ordentshop",
    "description": "API Documentation",
    "contact": {
      "name": "Ordentshop"
    },
    "license": {
      "name": "Agus Priyatin",
      "url": "https://aguspriyatin.wordpress.com/kontak"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://ordentshop-api.herokuapp.com/api/v1"
    }
  ],
  "paths": {
    "/users/login": {
      "post": {
        "tags": [
          "User and Authentication"
        ],
        "summary": "Existing user login",
        "description": "Login for existing user",
        "operationId": "Login",
        "requestBody": {
          "description": "Credentials to use",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginUser"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginUserResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "Login failed"
          },
          "422": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericErrorModel"
                }
              }
            }
          }
        }
      }
    },
    "/users/register": {
      "post": {
        "tags": [
          "User and Authentication"
        ],
        "summary": "Registering new user",
        "description": "Register for new user",
        "operationId": "Register",
        "requestBody": {
          "description": "Credentials to use",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterUser"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterUserResponse"
                }
              }
            }
          },
          "400": {
            "description": "Login failed"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Users": {
        "type": "object",
        "required": [
          "email",
          "name",
          "password",
          "phone"
        ],
        "properties": {
          "email": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "format": "password"
          },
          "phone": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "street": {
            "type": "string"
          },
          "apartment": {
            "type": "string"
          },
          "zip": {
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "country": {
            "type": "string"
          }
        }
      },
      "LoginUser": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "format": "password"
          }
        }
      },
      "LoginUserResponse": {
        "type": "object",
        "required": [
          "user"
        ],
        "properties": {
          "email": {
            "type": "string"
          },
          "token": {
            "type": "string"
          }
        }
      },
      "RegisterUser": {
        "type": "object",
        "required": [
          "email",
          "password",
          "name",
          "phone"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "format": "password"
          },
          "phone": {
            "type": "string"
          },
          "street": {
            "type": "string"
          },
          "apartment": {
            "type": "string"
          },
          "zip": {
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "country": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "customer",
              "admin"
            ],
            "default": "customer"
          }
        }
      },
      "RegisterUserResponse": {
        "type": "object",
        "required": [
          "user"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "passwordHash": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "street": {
            "type": "string"
          },
          "apartment": {
            "type": "string"
          },
          "zip": {
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "country": {
            "type": "string"
          },
          "role": {
            "type": "string"
          }
        }
      }
    },
    "GenericErrorModel": {
      "type": "object",
      "required": [
        "errors"
      ],
      "properties": {
        "errors": {
          "type": "object",
          "required": [
            "body"
          ],
          "properties": {
            "body": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "Token": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    }
  }
}